  <script>
    // Fill dynamic date
    document.getElementById('lastUpdated').textContent = new Date().toLocaleDateString();

    // Contact form: opens mail client with prefilled details
    document.getElementById('contactForm').addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const email = document.getElementById('email').value.trim();
      const message = document.getElementById('message').value.trim();
      if(!name || !email || !message){
        alert('Please fill all fields.');
        return;
      }
      const subject = encodeURIComponent('Portfolio contact from ' + name);
      const body = encodeURIComponent('Name: ' + name + '\\nEmail: ' + email + '\\n\\n' + message);
      // open mail client
      window.location.href = `mailto:akshaaksh3513@gmail.com?subject=${subject}&body=${body}`;
    });

    document.getElementById('clearBtn').addEventListener('click', function(){
      document.getElementById('name').value = '';
      document.getElementById('email').value = '';
      document.getElementById('message').value = '';
    });

    // Demo: create a simple in-browser CV PDF (uses browser print as PDF)
    document.getElementById('downloadBtn').addEventListener('click', function(e){
      e.preventDefault();
      // Open a new window with a simplified CV layout and call print
      const cvHtml = `
        <html>
          <head>
            <meta charset="utf-8">
            <title>CV - Aksha K. S</title>
            <style>
              body{font-family:Arial,Helvetica,sans-serif; color:#111; padding:28px}
              h1{margin-bottom:4px}
              .muted{color:#444}
              .section{margin-top:12px}
              .skills{margin-top:6px}
              .skill{display:inline-block; margin-right:8px; padding:4px 8px; background:#eef; border-radius:6px}
            </style>
          </head>
          <body>
            <h1>Aksha K. S</h1>
            <div class="muted">BSc Computer Science — JCT College of Arts and Science</div>
            <div class="section"><strong>Contact</strong><div>Email: akshaaksh3513@gmail.com • Phone: +91 98765 43210</div></div>
            <div class="section"><strong>Skills</strong><div class="skills"><span class="skill">Communication</span><span class="skill">AI</span><span class="skill">Data Science</span><span class="skill">Coding</span></div></div>
            <div class="section"><strong>Projects</strong><ul><li>Student Performance Dashboard</li><li>Mini Chatbot</li><li>Portfolio Website</li></ul></div>
          </body>
        </html>
      `;
      const w = window.open('', '_blank', 'width=800,height=600');
      w.document.write(cvHtml);
      w.document.close();
      // Wait a moment then trigger print (user can choose Save as PDF)
      setTimeout(()=> w.print(), 500);
    });

    // Simple accessibility: keyboard focus for nav links
    document.querySelectorAll('nav a').forEach(a => a.addEventListener('click', (e)=>{
      // let browser handle scrolling
    }));
  </script>
